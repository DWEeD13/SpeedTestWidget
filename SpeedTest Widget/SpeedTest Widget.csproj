<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net6.0-windows</TargetFramework>
    <RootNamespace>SpeedTest_Widget</RootNamespace>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
    <ApplicationIcon>SpeedTestIcon.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="SpeedTestIcon.ico" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="SpeedTest.NetCore" Version="2.1.0" />
  </ItemGroup>

  <ItemGroup>
    <None Update="speedtest.exe">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
